{% extends 'base.html.twig' %}

{% block title %}Gestion des Categories{% endblock %}

{% block body %}
<div class="col-md-6 col-md-offset-3 mt-4 bg-info">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="section_title text-center text-light mb-55 mt-4">
                <h3><span>Gestion des categories</span></h3>
            </div>
        </div>
    </div>
</div>
<div class="container row mx-auto mt-4 ">
    <div class="panel panel-primary  col-md-6 mt-4">
        <div class="row justify-content-center mt-4">
            <div class="col-lg-6">
                <div class="section_title text-center mb-55">
                    <h3><span>Ajout categories</span></h3>
                </div>
            </div>
        </div>
        <div class=" bg-light ">
            <div class="row">                                
                <div class="mx-auto mb-100">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-md-offset-3 mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section_title text-center mb-55 mt-4">
                    <h3><span>Liste des categories</span></h3>
                </div>
            </div>
        </div>
        <div class="card-body ">
            <div class=" row form-contact contact_form">
                <table class="table  table-bordered ">
                    <thead class="mx-auto bg-info ">
                        <tr>
                            <th class="bg-info">Identifiant</th>
                            <th class="mx-auto">Libelle</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for c in categories %}
                    <tr>
                        <th scope="row"><p>{{ c.id }}</p></th>
                        <td><p>{{ c.nom }}</p></td>                            
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>    
</div>
{% endblock %}
