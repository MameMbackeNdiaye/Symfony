{% extends 'base.html.twig' %}

{% block title %}Gestion des produits {% endblock %}

{% block body %}
<div class="col-md-6 col-md-offset-3 mt-4 bg-info">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="section_title text-center text-light mb-55 mt-4">
                <h3><span>Gestion des produits</span></h3>
            </div>
        </div>
    </div> 
</div>
<div class="container row mx-auto mt-4 ">
    <div class="panel panel-primary  col-md-6 mt-4">
        <div class="row justify-content-center mt-4">
            <div class="col-lg-6">
                <div class="section_title text-center mb-55">
                    <h3><span>Ajout produit</span></h3>
                </div>
            </div>
        </div>
        <div class=" bg-light ">
            <div class="row">                                
                <div class="mx-auto mb-100">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-md-offset-3 mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section_title text-center mb-55 mt-4">
                    <h3><span>Liste produit</span></h3>
                </div>
            </div>
        </div>
        <div class="card-body ">
            <div class=" row form-contact contact_form bg-light">
                <table class="table  table-bordered ">
                    <thead class="">
                        <tr class="mx-auto bg-info ">
                            <th>Identifiant</th>
                            <th>Libelle</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for p in produits %}
                        <tr>
                            <th scope="row">{{ p.id }}</th>
                            <td class=""><p>{{ p.libelle }}</p></td>
                            <td><p>{{ p.stock }}</p></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
            <div class="container row mx-auto m-4">
               <button class="btn "> {{ knp_pagination_render(produits) }}</button>
            </div>
        </div>
    </div>    
</div>

{% endblock %}